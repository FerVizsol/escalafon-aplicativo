<%- include('partials/_header') %>
<h1>INGRESO IDIOMAS Y LUGAR ESTUDIO</h1>

<div class="container">
    <form action="/anadir3/">
        <div class="row mt-5">
            <div class="col-md-6">
                <label class="col-sm-6 col-form-label">Idiomas</label>
                <select class="form-select" required>
                    <% if (idiomas[0].length > 0){ %>
                        <% for (var i = 0; i < idiomas[0].length ; i++) { %>
                            <option><%= idiomas[0][i].idioma %></option>
                        <% } %>
                    <% } %>
                </select>
            </div>
            <div class="col-md-6">
                <label class="col-sm-6 col-form-label">Lugares de Estudio</label>
                <input class="form-control" placeholder="Codigo de Institucion">
            </div>
        </div>
        <div class="row mt-3">
            <div class="d-grid gap-2 text-center">
                <button class="btn btn-lg btn-success" >CONTINUAR</button>
            </div>
        </div>
    </form>
    
</div>

<%- include('partials/_footer') %>