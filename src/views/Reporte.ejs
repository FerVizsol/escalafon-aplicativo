%>

<h1><%=informes[reporteopcion]%></h1>
<% for (let i = 0; i < data.length; i++) { %>
    <h3 class="mt-3">Descripción de resolución <%= data[i].numResolucion %></h3>
    <div class="container mt-5" style="border:solid;">
        <div class="row mt-2">
            <div class="col-md-6">
                <h4>Sección:</h4>
                <h5 class="text-body-secondary"><%= secciones[data[i].numSeccion] %></h5>
                <h4>Tipo:</h4>
                <h5 class="text-body-secondary"><%= data[i].tipo %></h5>
            </div>
            <div class="col-md-6">
                <h4>Estado:</h4>
                <h5 class="text-body-secondary"><%= data[i].estado %></h5>
                <h4>Regimen:</h4>
                <h5 class="text-body-secondary"><%= data[i].regimen %></h5>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <h4>Motivo:</h4>
                <h5 class="text-body-secondary"><%= data[i].motivo %></h5>
                <h4>Accion:</h4>
                <h5 class="text-body-secondary"><%= data[i].accion %></h5>
            </div>
        </div>
    </div>
<% } %>

<%- include('partials/_footer') %>
