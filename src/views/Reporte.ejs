<%- include('partials/_header') %>
<% const secciones = {
    1: "Seccion I: Identificacion",
    2: "Seccion II: Situacion Academica",
    3: "Seccion III: Ingreso o Reingreso",
    4: "Seccion IV: Trayectoria Laboral",
    5: "Seccion V: Asignaciones e incentivos",
    6: "Seccion VI: Retiro y Regimen pensionario",
    7: "Seccion VII: Premios y Estimulos",
    8: "Seccion VIII: Sanciones",
    9: "Seccion IX: Licencias y Vacaciones",
    10: "Seccion X: Otros"
};
  const informes ={
    1: "Informe Escalafonario de Inhabilitacion",
    2: "Informe Escalafonario de Cese Permanente",
    3: "Informe Escalafonario de Cese Temporal",
    4: "Informe Escalafonario de Destitucion",
    5: "Informe Escalafonario de Vacaciones",
