<%- include('partials/_header') %>
    <div class="container card mt-5">
        <form action="/anadir2/:numdoc" method="post">
            <div class="row form-group mt-3">
                <h3>Información Basica</h3>
                <div class="col-md-6">
                    <label for="numdoc" class="col-sm-6 col-form-label">Número de Documento</label> <br>
                    <input class="form-control"type="text" id="numdoc" name="numdoc" pattern="[0-9]{1,9}" placeholder="Ejemplo: 72757520" required oninput="this.value = this.value.replace(/[^0-9]/g, '');" maxlength="9">
                    <label class="col-sm-6 col-form-label">Nombres del docente</label> <br>
                    <input type="text" class="form-control" placeholder="Ejemplo: María Cristina" name="nombre" required>
                    <label class="col-sm-6 col-form-label">Apellido Paterno</label> <br>
                    <input type="text" class="form-control" placeholder="Ejemplo: Solís" name="appat"required>
                    <label class="col-sm-6 col-form-label">Apellido Materno</label> <br>
                    <input type="text" class="form-control" placeholder="Ejemplo: Laureano" name="apmat"required>
                </div>
                <div class="col-md-6">
                    <label class="col-sm-6 col-form-label">Fecha de Nacimiento</label> <br>
                    <input type="date" class="form-control" name="fechanac" required>
                    <label class="col-sm-6 col-form-label">Sexo del docente:</label> <br>
                    <select class="form-select" name="sexo" required>
                        <option>Masculino</option>
                        <option>Femenino</option>
                    </select>
                    <label class="col-sm-6 col-form-label">Estado Civil:</label> <br>
                    <select class="form-select" name="estado"required>
                        <option>Soltero</option>
                        <option>Casado</option>
                        <option>Viudo</option>
                        <option>Divorciado</option>
                    </select>
                </div>
            </div>
            <div class="row mt-3 form-group">
                <h3>Información Laboral</h3>
                <div class="col-md-6">
                    <label class="col-sm-6 col-form-label">Cargo:</label> <br>
                    <select class="form-select" name="cargo" required>
                        <option>Profesor</option>
                        <option>Director</option>
                        <option>Secretario</option>
                        <option>Técnico Administrativo</option>
                    </select>
                    <label class="col-sm-6 col-form-label">Condición Laboral:</label> <br>
                    <select class="form-select" name="claboral" required>
                        <option>Contratado</option>
                        <option>Nombrado</option>
                    </select>
                    <label class="col-sm-6 col-form-label">Jornada Laboral:</label> <br>
                    <select class="form-select" name="jlaboral" required>
                        <option>COMPLETA</option>
                        <option>PARCIAL</option>
                    </select>
                    <label class="col-sm-6 col-form-label">Institución donde labora:</label> <br>
                    <input class="form-control"type="text" id="numdoc" name="codmodular" pattern="[0-9]{1,9}" placeholder="Codigo Modular" required oninput="this.value = this.value.replace(/[^0-9]/g, '');" maxlength="7">
                </div>
                <div class="col-md-6">
                    <label class="col-sm-6 col-form-label">Situación Laboral:</label> <br>
                    <select class="form-select" name="slaboral" required>
                        <option>EN ACTIVIDAD</option>
                        <option>ENCARGADO</option>
                        <option>RETIRADO</option>
                    </select>
                    <label class="col-sm-6 col-form-label">Nivel Educativo:</label> <br>
                    <select class="form-select" name="neducativo" required>
                        <option>PRIMARIO</option>
                        <option>SECUNDARIO</option>
                        <option>SUPERIOR</option>
                    </select>
                    <label class="col-sm-6 col-form-label">Modalidad Educativa:</label> <br>
                    <select class="form-select" name="meducativa" required>
                        <option>PRESENCIAL</option>
                        <option>VIRTUAL</option>
                        <option>MIXTO</option>
                        <option>ESPECIAL</option>
                        <option>ADULTOS</option>
                    </select>
                    <label class="col-sm-6 col-form-label">Carpeta Física:</label>
                    <input type="text" class="form-control" placeholder="Ejemplo: CARPETA 3-G - UGEL TAMBOPATA" name="ubicacionfisica" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="d-grid gap-2 text-center">
                    <button class="btn btn-lg btn-success" type="submit" onclick="redirectToAnadir2()">CONTINUAR</button>
                </div>
            </div>
        </form>       
    </div>
    <script>
        function redirectToAnadir2() {
            var numdocValue = document.getElementById('numdoc').value;
            window.location.href = "/anadir2/" + numdocValue;
        }
    </script>
    
<%- include('partials/_footer') %>